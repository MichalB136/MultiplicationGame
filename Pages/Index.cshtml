@page
@model MultiplicationGame.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container" style="padding-top: 0.5rem; padding-bottom: 0.5rem;">
    <div class="row justify-content-center">
        <!-- Centered main column -->
        <div class="col-lg-8 col-md-10">
            <div class="text-center">
                <form method="post" class="mb-2">
                    <div class="row mb-1">
                        <div class="col-12">
                            <div class="fw-semibold fs-6">Poziom trudności:</div>
                            <div class="d-flex justify-content-center gap-2 flex-wrap align-items-center">
                                <!-- Single fixed level: 100 -->
                                <span class="badge bg-primary fs-6">Do 100</span>
                                <input type="hidden" name="Level" value="100" />
                            </div>
                        </div>
                    </div>
                </form>

                <!-- AJAX-replaceable fragment: contains question area and progress panel -->
                <div id="interactiveFragment">
                    @await Html.PartialAsync("~/Pages/Shared/_InteractiveFragment.cshtml", Model)
                </div>

            </div>
        </div>

    <!-- right column removed to allow centering -->
    </div>
</div>

