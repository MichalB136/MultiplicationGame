                    <div class="card-body text-center p-2">
                        <div class="fs-5 mb-1">
                            <b>@Model.A</b> <span class="mx-1">√ó</span> <b>@Model.B</b>
                            @if (Model.IsCorrect || Model.AttemptsLeft == 0)
                            {
                                <span class="mx-1">=</span> <b>@Model.CorrectAnswer</b>
                            }
                        </div>
                        <div class="mb-1 small">
                            Twoja odpowied≈∫: <b>@Model.UserAnswer</b>
                        </div>
                        <div class="mb-1 small">
                            Poprawnych odpowiedzi z rzƒôdu: <b>@Model.Streak</b>/@Model.RequiredAnswers
                        </div>
                        @if (Model.InitialAttempts > 0)
                        {
                        <div class="mb-1 small">
                            Pozosta≈Ço pr√≥b: <b>@Model.AttemptsLeft</b>
                        </div>
                        }
                        @if (Model.IsCorrect)
                        {
                            <div class="alert alert-success fw-bold mb-1 py-1" role="alert">Poprawna odpowied≈∫!</div>
                            @if (Model.BonusAwarded)
                            {
                                <div class="alert alert-warning fw-bold mb-1 py-1" role="alert">
                                    üéâ Bonus! +1 szansa! üéâ
                                </div>
                            }
                        }
                        else if (Model.InitialAttempts > 0 && Model.AttemptsLeft == 0)
                        {
                            <div class="d-flex align-items-center justify-content-center gap-2">
                                <div class="alert alert-danger fw-bold mb-1 py-1 mb-0" role="alert" style="min-width:200px;">@Model.InitialAttempts b≈Çƒôdne pr√≥by. Wynik: <b>@Model.CorrectAnswer</b></div>
                                <button type="submit" class="btn btn-danger" style="white-space:nowrap;" onclick="document.getElementById('NextQuestionField').value='true';">Spr√≥buj ponownie</button>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-danger fw-bold mb-1 py-1" role="alert">B≈Çƒôdna odpowied≈∫.</div>
                        }
                    </div>
                </div>
            </div>
        }
        @if (Model.GameWon)
        {
            <div class="mt-3">
                <h2 class="text-success">Wygra≈Çe≈õ! @Model.RequiredAnswers poprawnych odpowiedzi z rzƒôdu!</h2>
                <form method="post">
                    <input type="hidden" name="Level" value="@Model.Level" />
                    <input type="hidden" name="Streak" value="0" />
                    <button type="submit" class="btn btn-success">Zagraj ponownie</button>
                </form>
            </div>
        }
        @if (Model.AnswerChecked && Model.AttemptsLeft > 0)
        {
            <button type="submit" class="btn mt-1 @(Model.IsCorrect ? "btn-success" : "btn-warning")" onclick="document.getElementById('NextQuestionField').value='true';">
                @(Model.IsCorrect ? "Nastƒôpne pytanie" : "Spr√≥buj ponownie")
            </button>
        }
