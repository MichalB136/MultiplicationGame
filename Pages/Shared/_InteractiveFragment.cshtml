<div class="progress-panel">
    <style>
        /* Inline fallback styles to ensure progress grid renders when external CSS is not yet applied */
        .progress-panel .progress-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(36px, 1fr)); gap: 6px; justify-items: center; align-items: center; width:100%; }
        .progress-panel .progress-square { width:36px; height:36px; border-radius:6px; display:flex; align-items:center; justify-content:center; font-weight:700; font-size:0.85rem; color:#6c757d; background:#f8f9fa; border:2px solid #ddd; }
        .progress-panel .progress-square.completed { background: linear-gradient(135deg,#28a745,#20c997); color:#fff; border-color:#28a745; }
        .progress-panel .progress-square.current { background: linear-gradient(135deg,#ffc107,#fd7e14); color:#fff; border-color:#ffc107; }
    </style>
    <h6 class="text-center mb-2">Postƒôp</h6>
    <div class="progress-grid">
        @for (int i = 1; i <= Model.RequiredAnswers; i++)
        {
            var isCompleted = i <= Model.Streak;
            var isCurrent = i == Model.Streak + 1 && !Model.IsGameWon;
            <div class="progress-square @(isCompleted ? "completed" : "") @(isCurrent ? "current" : "")">
                @i
            </div>
        }
    </div>
    <div class="text-center mt-2">
    <small class="text-muted">@Model.Streak/@Model.RequiredAnswers uko≈Ñczone</small>
    </div>
    @if (Model.InitialAttempts > 0 && Model.BonusAttemptsThreshold > 0)
    {
        var progressPercentage = Model.BonusAttemptsThreshold > 0 ? (Model.PerfectStreak * 100.0 / Model.BonusAttemptsThreshold) : 0;
        <div class="mt-2 p-2 bg-light rounded border">
            <div class="d-flex justify-content-between align-items-center mb-1">
                <small class="text-muted fw-bold">üî• Bonus:</small>
                <small class="text-muted"><strong>@Model.PerfectStreak</strong>/@Model.BonusAttemptsThreshold</small>
            </div>
            <div class="progress" style="height: 18px; background-color: #e9ecef;">
                <div class="progress-bar bg-warning" role="progressbar" 
                     style="width: @(progressPercentage.ToString("F2", System.Globalization.CultureInfo.InvariantCulture))% !important;" 
                     aria-valuenow="@Model.PerfectStreak" aria-valuemin="0" aria-valuemax="@Model.BonusAttemptsThreshold">
                </div>
            </div>
            <small class="text-muted mt-1 d-block text-center" style="font-size:0.75rem;">@Model.BonusAttemptsThreshold poprawnych = +1 ‚ù§Ô∏è</small>
        </div>
    }
</div>

<script>
    (function() {
        try {
            var container = document.getElementById('interactiveFragment');
            var searchRoot = container || document;
            var grid = searchRoot.querySelector('.progress-panel .progress-grid');
            if (grid) {
                grid.style.display = 'grid';
                grid.style.gridTemplateColumns = 'repeat(auto-fit, minmax(44px, 1fr))';
                grid.style.gap = '8px';
                grid.style.justifyItems = 'center';
                grid.style.alignItems = 'center';
                grid.style.width = '100%';
            }
            // Focus the answer input (if present and editable) so user can type immediately
            try {
                var ans = searchRoot.querySelector('input[name="UserAnswer"]');
                if (ans && !ans.readOnly) {
                    ans.focus();
                    if (ans.select) ans.select();
                }
            } catch (e) { /* ignore focus errors */ }
        } catch (e) { /* ignore init errors */ }
        
        // Add form submission validation
        try {
            var form = document.querySelector('form');
            if (form) {
                form.addEventListener('submit', function(e) {
                    var answerInput = this.querySelector('input[name="UserAnswerText"]') || this.querySelector('input[name="UserAnswer"]');
                    if (answerInput) {
                        var value = (answerInput.value || '').trim();
                        
                        // Check if empty, just minus, just dot, or combinations
                        if (!value || value === '-' || value === '.' || value === '-.' || value === '-.') {
                            e.preventDefault();
                            alert('Podaj prawid≈ÇowƒÖ liczbƒô');
                            answerInput.focus();
                            return false;
                        }
                        
                        // Check for invalid characters - only digits and optional minus allowed
                        if (!/^-?\d+$/.test(value)) {
                            e.preventDefault();
                            alert('Liczba mo≈ºe zawieraƒá tylko cyfry (i opcjonalnie minus na poczƒÖtek).\nNiedozwolone znaki: spacje, przecinki, kreski, znaki specjalne.');
                            answerInput.focus();
                            return false;
                        }
                        
                        // Additional security check: ensure at least one digit exists
                        if (!/\d/.test(value)) {
                            e.preventDefault();
                            alert('Liczba musi zawieraƒá co najmniej jednƒÖ cyfrƒô');
                            answerInput.focus();
                            return false;
                        }
                    }
                });
            }
        } catch (e) { /* ignore validation errors */ }
    })();
</script>

